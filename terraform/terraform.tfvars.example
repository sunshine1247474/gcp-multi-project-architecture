# ============================================================
# Copy this file to terraform.tfvars and fill in your values:
#   cp terraform.tfvars.example terraform.tfvars
# ============================================================

# Project A: Edge / Frontend layer (External LB, Cloud Armor, PSC consumer)
project_a = "your-edge-project-id"

# Project B: Backend / Application layer (GKE, Nginx, Flask, PSC producer)
project_b = "your-backend-project-id"

# GCP Region and Zone
region = "us-central1"
zone   = "us-central1-a"

# GKE Configuration
gke_node_count   = 2          # Number of worker nodes
gke_machine_type = "e2-medium" # ~$0.034/hour per node
